<?xml version="1.0"?>
<robot
      xmlns:xacro="http://ros.org/wiki/xacro"
      name="rotunit">

  <property name="M_PI" value="3.1415926535897931" />

  <link name="laser_rot_mount_link">
    <visual>
	    <geometry>
	      <box size=".18 .18 .143" />
	    </geometry>
    	<origin xyz="0 0 0.0715" rpy="0 0 0" />
    	<material name="white" >
      		<color rgba="1 1 1 1" />
    	</material>
  	</visual>
  </link>

  <link name="laser_rot_link">
    <visual>
	    <geometry>
	      <box size=".156 .155 .185" />
	    </geometry>
    	<material name="blue" >
      		<color rgba="0 0 1 1" />
    	</material>
  	</visual>
  </link>

  <joint name="laser_rot_joint" type="continuous">
    <parent link="laser_rot_mount_link" />
    <child link="laser_rot_link" />
    <origin xyz="0 0 0.22" rpy="${-M_PI/2} 0 0" />
    <axis xyz="0 1 0" />
  </joint>
</robot>
