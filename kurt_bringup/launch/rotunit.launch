<?xml version="1.0"?>
<launch>
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find kurt_description)/parts/rotunit.urdf.xacro'" />

  <node pkg="robot_state_publisher" type="state_publisher" name="state_publisher" output="screen" />

  <include file="$(find kurt_bringup)/launch/sick_lms200.launch" />

  <node pkg="laser_assembler" type="laser_scan_assembler" name="laser_scan_assembler" output="screen" >
    <param name="max_scans" value="1000" />
    <param name="fixed_frame" value="/laser_rot_mount_link" />
  </node>

  <node pkg="rotunit_snapshotter" type="rotunit_snapshotter" name="rotunit_snapshotter" output="screen" />
</launch>
